   var state = {
     turn: this.turn,
     selectedX: this.selectedX,
     selectedY: this.selectedY,
     validMoves: this.validMoves,
     totalValid: this.totalValid,
     captured: this.capture,
     board: this.board,
   };
   document.getElementById("state").value = JSON.stringify(state);
 }
