 Checkers.prototype.showOrHideValidMove = function (x, y) {
   for (var i = 0; i < 8; i++) {
     for (var j = 0; j < 8; j++) {
       var cell = this.getCell(i, j)
       if (i % 2 == 0) {
         if (j % 2 == 0) {
           cell.className = "red";
         } else {
           cell.className = "black";
         }
       } else {
         if (j % 2 == 0) {
           cell.className = "black";
         } else {
           cell.className = "red";
         }
       }
     }
   }
   for (var i = 0; i < this.validMoves.length; i++) {
