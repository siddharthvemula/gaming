       var cell = this.getCell(i, j)
       if (i % 2 == 0) {
         if (j % 2 == 0) {
           cell.className = "red";
         } else {
           cell.className = "black";
         }
       } else {
         if (j % 2 == 0) {
           cell.className = "black";
         } else {
           cell.className = "red";
         }
       }
     }
   }
   for (var i = 0; i < this.validMoves.length; i++) {
     var cell = this.getCell(this.validMoves[i].x, this.validMoves[i].y)
     if (cell != null) {
       cell.className = "validMoves";
     }
   }
 }
